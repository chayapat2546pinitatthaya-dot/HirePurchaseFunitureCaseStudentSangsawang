{
  "name": "sangsawang-furniture",
  "version": "1.0.0",
  "description": "Website for Sangsawang Furniture with installment payment system",
  "main": "src/server.js",
  "scripts": {
    "dev": "kill-port 7100 3001 && concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node src/server.js",
    "start:dev": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "author": "Sangsawang Furniture",
  "license": "MIT",
  "keywords": [
    "furniture",
    "ecommerce",
    "installment",
    "react",
    "nodejs",
    "express",
    "mysql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sangsawang-furniture.git"
  }
}
